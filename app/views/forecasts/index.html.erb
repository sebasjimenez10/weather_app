<h1>Weather Forecasts</h1>
<p>Enter address to see forecast information</p>

<% if flash[:alert] %>
  <%= flash[:alert] %>
<% end %>


<div data-controller="forecast mapbox">
  <form>
    <input
      id="forecast-address"
      type="text"
      data-mapbox-target="input"
      data-forecast-target="input"
      placeholder="Search for an address"
      autocomplete="address-line1"
    />
  </form>

  <button data-action="click->forecast#load">Get Forecast</button>
</div>
