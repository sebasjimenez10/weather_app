
<%# <div class="container"> %>
  <div class="flex min-h-full flex-col justify-center px-6 py-12 lg:px-8">
    <div class="sm:mx-auto sm:w-full sm:max-w-sm">
      <img class="mx-auto h-10 w-auto" src="https://tailwindcss.com/plus-assets/img/logos/mark.svg?color=lime&shade=500" alt="Your Company">
      <h2 class="mt-10 text-center text-2xl/9 font-bold tracking-tight text-gray-900">Weather Forecasts</h2>
    </div>

    <div class="mt-10 sm:mx-auto sm:w-full sm:max-w-sm">
      <div data-controller="forecast mapbox">
        <form>
          <div>
            <label for="address" class="block text-sm/6 font-medium text-gray-900">Enter address to see forecast information</label>
            <div class="mt-2">
              <input
                id="forecast-address"
                name="address"
                class="block w-full rounded-md bg-white px-3 py-1.5 text-base text-gray-900 outline-1 -outline-offset-1 outline-gray-300 placeholder:text-gray-400 focus:outline-2 focus:-outline-offset-2 focus:outline-lime-600 sm:text-sm/6"
                type="text"
                data-mapbox-target="input"
                data-forecast-target="input"
                placeholder="Search for an address"
                autocomplete="address-line1"
                required
              />
            </div>
          </div>

          <div class="mt-2">
            <button data-action="click->forecast#load" class="flex w-full justify-center rounded-md bg-lime-600 px-3 py-1.5 text-sm/6 font-semibold text-white shadow-xs hover:bg-lime-500 focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-lime-600 hover:cursor-pointer">Get Forecast</button>
          </div>
        </form>
      </div>
    </div>

    <% if flash[:alert] %>
      <div class="rounded-md bg-red-50 p-4 mt-6">
        <div class="flex">
          <div class="shrink-0">
            <svg class="size-5 text-red-400" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true" data-slot="icon">
              <path fill-rule="evenodd" d="M10 18a8 8 0 1 0 0-16 8 8 0 0 0 0 16ZM8.28 7.22a.75.75 0 0 0-1.06 1.06L8.94 10l-1.72 1.72a.75.75 0 1 0 1.06 1.06L10 11.06l1.72 1.72a.75.75 0 1 0 1.06-1.06L11.06 10l1.72-1.72a.75.75 0 0 0-1.06-1.06L10 8.94 8.28 7.22Z" clip-rule="evenodd" />
            </svg>
          </div>
          <div class="ml-3">
            <h3 class="text-sm font-medium text-red-800">There was an errors with your submission</h3>
            <div class="mt-2 text-sm text-red-700">
              <ul role="list" class="list-disc space-y-1 pl-5">
                <li><%= flash[:alert] %></li>
              </ul>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
<%# </div> %>
